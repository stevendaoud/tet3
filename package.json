{
    "name": "nodejs-sample-app",
    "version": "1.0.0",
    "description": "Sample Node.js application with linting, testing, and monitoring",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "test": "jest --coverage",
        "lint": "eslint ."
    },
    "dependencies": {
        "dotenv": "^16.0.0",
        "express": "^4.18.2",
        "newrelic": "^10.0.0"
    },
    "devDependencies": {
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "supertest": "^6.0.0"
    },
    "jest": {
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    },
    "author": "",
    "license": "ISC"
}